<%- include("../partials/header") -%>
<div class="container">
    <div class="new-post-form">
        <h3>Edit <%= post.title %></h3>
    <form action="/blogs/<%= post._id %>?_method=put" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" name="post[title]" value="<%= post.title %>">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="post[image]" value="<%= post.image %>">
        </div>
        <div class="form-group">
            <textarea class="form-control" name="post[content]" cols="30" rows="10"><%= post.content %></textarea>
        </div>
        <div class="form-group">
            <button class="btn btn-outline-primary btn-lg">Submit</button>
        </div>
    </form>
    </div>
</div>
<%- include("../partials/footer") -%>