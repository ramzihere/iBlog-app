<%- include("../partials/header") -%>
<div class="container topmr">
    <div class="new-comment-form">
        <h3>Comment on <%= post.title %> </h3>
        <form action="/blogs/<%= post._id %>/comments" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="Text">
            </div>
            <div class="form-group">
                <button class="btn btn-outline-primary" style="display: inline;">Submit</button> 
            </div>
        </form>
    </div>
</div>
